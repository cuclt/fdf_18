<div class="row">
  <div class="col-md-12">
    <div class="portlet box green">
      <div class="team-heading">
        <h3><%= t "product_list" %></h3>
        <%= link_to t("add_new"), new_admin_product_path, class: "btn btn-primary" %>
        <hr>
      </div>
      <div class="portlet-body">
        <table class="table table-striped table-hover table-responsive datatable"
          id="data-list">
          <thead>
            <tr>
              <th><%= t "name" %></th>
              <th><%= t "image" %></th>
              <th><%= t "price" %></th>
              <th><%= t "quantity" %></th>
              <th></th>
              <th></th>
            </tr>
          </thead>
            <%= render @products %>
          <tbody>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
